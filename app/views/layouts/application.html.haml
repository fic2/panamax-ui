!!!
%html
  %head
    %title= formatted_title(content_for(:title))

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = favicon_link_tag asset_path('favicons/favicon-160x160.png')
    %script#ajax_error_template{type: 'text/x-handlebars-template'}
      = render '/shared/notice'
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-63227151-7', 'auto');
      ga('send', 'pageview');
  %body{id: yield(:body_id)}
    :javascript
      var _kiq = _kiq || [];
      (function(){
        setTimeout(function(){
          var d = document, f = d.getElementsByTagName('script')[0], s = d.createElement('script'); s.type = 'text/javascript';
          s.async = true; s.src = 'https://s3.amazonaws.com/ki.js/52526/bmn.js'; f.parentNode.insertBefore(s, f);
        }, 1);
      })();
    %header
      %nav
        %ul
          %li.search-link
            = link_to 'Search for SE', new_search_path, title: 'Search for SE'
          %li.manage-link
            = link_to 'Manage', dashboard_index_path, title: 'Manage'
          %li.documentation-link
            = link_to 'Documentation', 'http://panamax.io/documentation', target: '_blank', title: 'Documentation'
      %h1.ficontent-logo
        %a{ href: 'http://mediafi.org', target: '_blank', title: 'Navigate to FIcontent 2' }
          Navigate to FIcontent 2
    %main
      = render 'shared/notifications'
      = yield
    %aside.metrics
      %span
        %a{ href: metrics_url, target: '_blank' }
          CoreOS Host Performance:
      = render 'shared/metrics'
    %footer
      .inner

        #footer-info
          %p
            Panamax is an open-source product from CenturyLink Labs.
            /[CenturyLink Labs Blog](http://www.centurylinklabs.com),
            /[Fork Us on GitHub](https://github.com/CenturyLinkLabs/panamax-ui/wiki),
            /[Follow Us on Twitter](https://twitter.com/panamax_io),
            /[Legal & Privacy Policy](http://www.centurylinkcloud.com/legal)
          %ul
            %li
              = link_to 'CenturyLink Labs Blog',
                        'http://www.centurylinklabs.com',
                        target: '_blank',
                        title: 'CenturyLink Labs Blog'
            %li.github-link
              = link_to 'Fork Us on GitHub',
                        'https://github.com/CenturyLinkLabs/panamax-ui/wiki',
                        target: '_blank',
                        title: 'Fork Us on GitHub'
            %li.twitter-link
              = link_to 'Follow Us on Twitter',
                        'https://twitter.com/panamax_io',
                        target: '_blank',
                        title: 'Follow Us on Twitter'
            %li
              = link_to 'Legal & Privacy Policy',
                        'http://www.centurylinkcloud.com/legal',
                        target: '_blank',
                        title: 'Legal & Privacy Policy'

  %section.copyright
    #logo
    %small!= "&copy; #{Time.now.year} CenturyLink &mdash; The Panamax project is provided under the Apache 2.0 license. All Rights Reserved."
